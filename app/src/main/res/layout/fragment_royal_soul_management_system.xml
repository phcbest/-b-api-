<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".royalSoulManagementSystem.royalSoulManagementSystem">
    <!--    人类最古代码👇-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/fragment_royal_soul_management_system_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取图片" />
            <ImageView
                android:id="@+id/fragment_royal_soul_management_system_ImageView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:text="读取json文件"
                android:visibility="gone" />
            <Button
                android:id="@+id/fragment_royal_soul_management_system_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取御魂json" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>